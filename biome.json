{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "extends": ["@stegripe/biomejs-config"],
    "files": {
        "includes": ["**", "!**/ui/*"]
    },
    "css": {
        "parser": {
            "cssModules": false,
            "tailwindDirectives": true
        }
    },
    "linter": {
        "domains": {
            "next": "all"
        },
        "rules": {
            "style": {
                "noCommonJs": "off",
                "noNestedTernary": "off",
                "noRestrictedGlobals": "off",
                "useExplicitLengthCheck": "off",
                "useNamingConvention": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noUnknownAtRules": "off"
            },
            "nursery": {
                "useExplicitType": "off"
            }
        }
    }
}
